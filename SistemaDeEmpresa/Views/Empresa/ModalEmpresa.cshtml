@model DbEmpresa

<div id="modal-Empresa" class="modal" tabindex="-1">
    <div class="modal-dialog modal-xl" id="modalconteudo">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title">Empresa</h5>
                <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
            </div>
            <div class="modal-body">

                <ul class="nav nav-tabs" id="myTab">
                    <!-- Essas são as abas do Modal principal -->
                    <li class="nav-item">
                        <button class="nav-link active"
                                id="empresa-tab"
                                data-bs-toggle="tab"
                                data-bs-target="#empresa"
                                type="button">
                            Dados Empresa
                        </button> <!-- Aba da empresa -->
                    </li>
                    <li class="nav-item">
                        <button class="nav-link"
                                id="filial-tab"
                                data-bs-toggle="tab"
                                data-bs-target="#filial"
                                type="button">
                            Filial
                        </button> <!-- Aba da filial -->
                    </li>
                </ul>
                <div class="tab-content" id="myTabContent">
                    <div class="tab-pane fade show active" id="empresa">
                        <!-- Inicio da tela de cadastro de empresa -->
                        <div class="row">
                            <div class="col-md-6">
                                <label>Nome Fantasia:</label>
                                <input type="text" id="ovTXT_nomeFantasia" class="form-control" />
                            </div>
                            <div class="col-md-3">
                                <label>Data Fundação:</label>
                                <input type="date" id="ovDT_dataFundacao" class="form-control" />
                            </div>
                            <div class="col-md-3">
                                <label>Grupo Empresarial:</label>
                                <select id="ovTXT_grupoEmpresarial" class="form-control">
                                    <option value="grupo1">Grupo 1</option>
                                    <option value="grupo2">Grupo 2</option>
                                </select>
                            </div>
                            <div class="col-md-6">
                                <label>Razão Social:</label>
                                <input type="text" id="ovTXT_razaoSocial" class="form-control" />
                            </div>

                            <div class="col-md-2">
                                <label>Funcionários:</label>
                                <input type="number" id="ovTXT_funcionarios" class="form-control" />
                            </div>
                            <div class="col-md-2">
                                <label>Faturamento:</label>
                                <input type="number" id="ovTXT_faturamento" class="form-control" />
                            </div>
                            <div class="col-md-2">
                                <label>Capital Social:</label>
                                <input type="text" id="ovTXT_capitalSocial" class="form-control" />
                            </div>
                            <div class="col-md-3">
                                <label>Inscrição Estadual:</label>
                                <input type="text" id="ovTXT_inscricaoEstadual" class="form-control" />
                            </div>
                            <div class="col-md-3">
                                <label>CNPJ:</label>
                                <input type="text" id="ovTXT_cnpj" class="form-control" />
                            </div>
                            <div class="col-md-5">
                                <label>Cidade:</label>
                                <select id="ovTXT_cidade" class="form-control">
                                    <option value="cidade1">Cidade 1</option>
                                    <option value="cidade2">Cidade 2</option>
                                </select>
                            </div>
                            <div class="col-md-12">
                                <label>Endereço:</label>
                                <input type="text" id="ovTXT_endereco" class="form-control" />
                            </div>
                            <div class="col-md-6">
                                <label>Descrição:</label>
                                <input type="text" id="ovTXT_descricao" class="form-control" />
                            </div>
                            <div class="col-md-4">
                                <label>E-mail:</label>
                                <input type="text" id="ovTXT_email" class="form-control" />
                            </div>
                            <div class="col-md-2">
                                <label>Telefone:</label>
                                <input type="text" id="ovTXT_telefone" class="form-control" />
                            </div>
                        </div>
                    </div> <!--Fim da tela de cadastro de empresa-->

                    <div class="tab-pane fade" id="filial">
                        <!-- Inicio da tela de filiais-->
                        <div class="form-group pull-right">
                            <button type="button"
                                    id="ovBTN_AdicionarFilial"
                                    class="btn btn-primary">
                                <i class="fa fa-plus-circle"></i>
                                Adicionar
                            </button>
                        </div>
                        <div class="form-group">
                            <div class="row">
                                <div class="col-md-12">
                                    <table id="ovTR_DadosFiliais" class="table table-striped table-dark">
                                        <!--Tabela de filial-->
                                        <thead>
                                        <th>Código</th>
                                        <th class="tabeladesc">Descrição</th>
                                        </thead>
                                        <tbody>
                                        </tbody>
                                    </table>
                                </div>
                            </div>
                        </div>
                    </div>	<!--Fim da tela de filiais-->
                </div>

            </div>
            <div class="modal-footer">
                <!--Botões do modal-->
                <button type="button"
                        class="btn btn-secondary"
                        data-bs-dismiss="modal">
                    <i class="fa fa-times-circle"></i> Fechar
                </button>
                <input type="submit" value="Salvar" class="btn btn-outline-primary" />
                <button type="button"
                        id="ovBTN_Salvar"
                        class="btn btn-primary">
                    <i class="fa fa-save"></i> Salvar
                </button>
            </div>
        </div>
    </div>
</div>
